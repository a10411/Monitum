<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="172dp"
    android:background="#F5F5F5">

    <com.example.monitumpdm.ComunicadoTopBar
        android:id="@+id/comunicadoTopBar"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewSalaComunicado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/inter_bold"
        android:text="TextView"
        android:textColor="#fff"
        app:layout_constraintBottom_toBottomOf="@+id/comunicadoTopBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewDataComunicado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/inter_regular"
        android:text="TextView"
        android:textColor="#fff"
        app:layout_constraintBottom_toBottomOf="@+id/comunicadoTopBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewTituloComunicado"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/inter_bold"
        android:text="TextView"
        android:textColor="#373737"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/comunicadoTopBar" />

    <TextView
        android:id="@+id/textViewCorpoComunicado"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/inter_regular"
        android:text="TextView"
        android:textColor="#373737"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTituloComunicado" />

    <Button
        android:id="@+id/buttonEditarComunicado"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:backgroundTint="#FFEB3B"
        android:text="Editar"
        app:layout_constraintBottom_toBottomOf="@+id/comunicadoTopBar"
        app:layout_constraintEnd_toStartOf="@+id/textViewDataComunicado"
        app:layout_constraintStart_toEndOf="@+id/textViewSalaComunicado"
        app:layout_constraintTop_toTopOf="@+id/comunicadoTopBar" />

</androidx.constraintlayout.widget.ConstraintLayout>